# Database Configuration
# Required by database.ts for PostgreSQL connection
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database>

# Redis Configuration
# Required by redis.ts for caching and session management
REDIS_URL=redis://<username>:<password>@<host>:<port>

# Storage Configuration
# Required by storage.ts for AWS S3 media storage
STORAGE_BUCKET=<bucket_name>
STORAGE_REGION=<region>
AWS_ACCESS_KEY_ID=<aws_access_key_id>
AWS_SECRET_ACCESS_KEY=<aws_secret_access_key>

# Email Configuration
# Required by email.ts for SMTP email delivery
SMTP_HOST=<smtp_host>
SMTP_PORT=<smtp_port>
SMTP_USER=<smtp_user>
SMTP_PASS=<smtp_password>
SMTP_SECURE=false
EMAIL_FROM=no-reply@example.com

# Authentication Configuration
# Required by TokenService.ts for JWT token generation
JWT_SECRET=<jwt_secret>
JWT_EXPIRATION=1h

# Payment Configuration
# Required by StripeService.ts for payment processing
STRIPE_API_KEY=<stripe_api_key>
STRIPE_WEBHOOK_SECRET=<stripe_webhook_secret>

# Environment Configuration
NODE_ENV=development
LOG_LEVEL=info

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=5000